<div class="ui container">
	<h1>Hello, Welcome </h1>
	<table class="ui fixed single line celled table">
		<thead>
			<tr>
				<th>Date</th>
				<th>Start</th>
				<th>Finish</th>
				<th>Head Count</th>
				<th>Edit</th>
			</tr>
		</thead>
		<tbody>
		<% @shifts.each do |shift| %>
		<tr>
			<td><%= shift.date %></td>
			<td><%= shift.start %></td>
			<td><%= shift.end %></td>
			<td><%= shift.user_shifts.count - 1 %></td>
			<td class="selectable"><%= link_to "Edit This", shift_path(shift) %></td>
		</tr>
		<% end %>
		</tbody>
		</table>
</div>


