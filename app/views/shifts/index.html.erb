<div class="ui container">
	<div class="row">
			<h1>Welcome to Scheduler </h1>
			<%= link_to "New Shift", new_shift_path, class: "ui teal button" %>
	</div>
	<table class="ui fixed single line celled teal table">
		<thead>
			<tr>
				<th>Date</th>
				<th>Start</th>
				<th>Finish</th>
				<th>Head Count</th>
				<th>Edit</th>
			</tr>
		</thead>
		<tbody>
		<% @shifts.each do |shift| %>
		<tr>
			<td><%= shift.date.strftime("%b. %d, %Y") %></td>
			<td><%= shift.start.strftime("%I:%M%p") %></td>
			<td><%= shift.end.strftime("%I:%M%p") %></td>
			<td><%= shift.user_shifts.count %></td>
			<td class="selectable"><%= link_to "Edit This", shift_path(shift) %></td>
		</tr>
		<% end %>
		</tbody>
		</table>
</div>


